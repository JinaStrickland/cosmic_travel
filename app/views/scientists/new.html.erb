<h1> Create New Scientist </h1>

<ul>
<% if @scientist.errors.any? %>
        <% @scientist.errors.full_messages.each do |error| %>
       <li> <%= error %> </li>
    <% end %>
<% end %>
</ul>

<%= form_for @scientist do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %> <br>
    <%= f.label :field_of_study %>
    <%= f.text_field :field_of_study %><br>
    <%= f.submit "Submit" %>
<% end %>
<br>
<br>
<%= link_to "Back to Scientists", scientists_path %>

